<mvc:View controllerName="com.mycompany.employeemanagement.controller.EmployeeDetails"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
        <Page id="_IDGenPage1" title="Employee Details">
        <content>
            <VBox id="_IDGenVBox" class="sapUiSmallMargin">
                <Text id="_IDGenText32" text="Employee ID: {EmpData>/EmployeeID}" />
                <Text id="_IDGenText33" text="Name: {EmpData>/EmployeeName}" />
                <Text id="_IDGenText34" text="Email: {EmpData>/EmployeeEmail}" />
                <Text id="_IDGenText35" text="Phone No: {EmpData>/EmployeePhoneNo}" />
                <Text id="_IDGenText36" text="Position: {EmpData>/Position}" />
                <Text id="_IDGenText37" text="Hire Date: {EmpData>/hireDate}" />
                <Text id="_IDGenText12" text="Salary: {EmpData>/salary}" />
   
            </VBox>
            <Bar id="_IDGenBar" />

            <HBox id="hBox1" justifyContent="Center">
            <Button id="addFrag" type="Emphasized" icon="sap-icon://business-card" text="OpenFragment" tooltip="Open the Fragment" press="onOpenFragment" />
            </HBox>
            
            <Bar id="_IDGenBar1" />
            <core:Fragment id="_IDGenFragment1" fragmentName="com.mycompany.employeemanagement.view.EmployeeFragment" type="XML">
            </core:Fragment>

            <Bar id="_IDGenBar2" />
            <HBox id="hbox13" justifyContent="Center" class="sapUiSmallMarginTop">
            <Button id="btn12"   
            type="Success" press="onOpenNewFragment" text="NewFragment" />
            </HBox>
        </content>



         <IconTabBar
		id="idIconTabBarFiori2"
		expanded="{device>/isNoPhone}"
		class="sapUiResponsiveContentPadding">
		<items>
			<IconTabFilter id="_IDGenIconTabFilter5"
				text="Info"
				key="info"
				count="3">
				<Text id="_IDGenText11" text="Info content goes here ..." />
			</IconTabFilter>
			<IconTabFilter id="_IDGenIconTabFilter6"
				text="Attachments"
				key="attachments"
				count="4321">
				<Text id="_IDGenText13" text="Attachments go here ..." />
			</IconTabFilter>
			<IconTabFilter id="_IDGenIconTabFilter7"
				text="Notes"
				key="notes"
				count="333">
				<Text id="_IDGenText14" text="Notes go here ..." />
			</IconTabFilter>
			<IconTabFilter id="_IDGenIconTabFilter8"
				text="People"
				key="people"
				count="34">
				<Text id="_IDGenText15" text="People content goes here ..." />
			</IconTabFilter>
		</items>
	</IconTabBar>
    </Page>
    
</mvc:View>